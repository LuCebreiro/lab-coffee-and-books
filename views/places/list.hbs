<h2>{{type}}</h2>

<div>
    <div class="row">
    {{#each place}}
     <div class="col-md-4">
  <div class="card m-2">
    <div class="card-body">
      <h2 class="card-title">Place Name: {{this.name}}</h2>
      <div class="d-flex">
      <a class="btn btn-success me-2" href="/places/{{this._id}}/edit">Edit info</a>
      <form action="/places/{{this._id}}/delete" method="POST">
        <button class="btn btn-danger">Delete</button>
      </form>
    </div>
    </div>
  </div>
</div>
    {{/each}}
  </div>
</div>